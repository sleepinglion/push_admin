<%= form_for [:admin,push_prepare_message] do |f| %>
<% if push_prepare_message.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(push_prepare_message.errors.count, "error") %> prohibited this request from being saved:</h2>
	<ul>
		<% push_prepare_message.errors.full_push_prepare_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :content %>
	<%= f.text_area :content,:class=>"form-control",:required=>"required",:rows=>6 %>
</div>
<div class="form-group">
	<%= f.label :enable %>
	<%= f.check_box :enable %>
</div>
<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>
