<div class="row">
	<h3 class="col-xs-12 col-sm-6"><%= @controller_name %> <%= actionNameChange controller.action_name %></h3>
</div>
<div class="table-responsive">
	<table class="table table-bordered table-striped">
		<colgroup>
			<col style="width:80px;" />
			<col />
			<col style="width:80px;" />
			<col style="width:100px;" />
			<% if can?(:update, Recommend) || can?(:delete, Recommend) %>
			<col <%= raw manage_width(Notice) %> />
			<% end %>
		</colgroup>
		<thead>
			<tr>
				<th><%= t(:label_number) %></th>
				<th><%=t(:title,scope:[:activerecord,:attributes,:recommend]) %></th>
				<th><%=t(:enable,scope:[:activerecord,:attributes,:recommend]) %></th>	
				<th><%= t(:label_created_at) %></th>
				<% if can?(:update, Notice) || can?(:delete, Notice) %>
				<th><%= t(:label_manage) %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% unless @admin_recommends.empty? %>
			<% @admin_recommend.each do |recommend| %>
			<tr>
				<td><%= link_to recommend.id,admin_recommend_path(recommend) %></td>
				<td class="mw"><%= link_to recommend.title,admin_recommend_path(recommend) %></td>
				<td><%= raw flagToString(recommend.enable) %></td>
				<td><%= recommend.created_at.to_date %></td>
				<% if can?(:update, Recommend) || can?(:delete, Recommend) %>
				<td> <% if can? :update, recommend %>
				<%= link_to edit_admin_recommend_path(recommend),:class=>"btn btn-default" do %> <i class="glyphicon glyphicon-pencil"></i> <%= t(:link_edit) %>
				<% end %>
				<% end %>
				<% if can? :delete, recommend %>
				<%= link_to admin_recommend_path(recommend), :method => :delete, :data => { :confirm => t(:delete_confirm) },:class=>"btn btn-danger" do %> <i class="glyphicon glyphicon-trash"></i> <%= t(:link_delete) %>
				<% end %>
				<% end %> </td>
				<% end %>
			</tr>
			<% end %>
			<% else %>
			<tr>
				<td colspan="5"><%= t(:no_data)%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-3 col-md2">
		<% if can? :create, Recommend %>
		<%= link_to new_admin_recommend_path,:class=>"btn btn-primary" do %>
		<i class="glyphicon glyphicon-plus"></i> <%= t(:link_new) %>
		<% end %>
		<% end %>
	</div>
	<%= paginate @admin_recommends %>
</div>
