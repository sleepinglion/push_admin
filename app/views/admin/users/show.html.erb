<div class="sl_show">
	<h3><%=t(:user,scope:[:activerecord,:models])%></h3>
	<table class="table table-striped table-bordered">
		<colgroup>
			<col style="width:30%"/>
			<col style="width:70%"/>
		</colgroup>
		<tbody>
			<tr>
				<th><%=t(:group_id,scope:[:activerecord,:attributes,:user]) %></th>
				<td>
					<%=@user.group.title %>
				</td>
			</tr>
			<tr>
				<th><%=t(:login_id,scope:[:activerecord,:attributes,:user]) %></th>
				<td>
					<% if @user.login_id? %>
					<%=@user.login_id %>
					<% else %>
					<%=t(:not_insert) %>
					<% end %>
				</td>
			</tr>
			<tr>
				<th><%=t(:name,scope:[:activerecord,:attributes,:user]) %></th>
				<td>
					<% if @user.name? %>
					<%=@user.name %>
				<% else %>
					<%=t(:not_insert)%>
					<% end %>
				</td>
			</tr>
			<tr>
				<th><%=t(:phone,scope:[:activerecord,:attributes,:user]) %></th>
				<td>
					<% if @user.phone? %>
					<%=@user.phone %>
				<% else %>
					<%=t(:not_insert)%>
					<% end %>
				</td>
			</tr>
			<tr>
				<th><%=t(:birthday,scope:[:activerecord,:attributes,:user]) %></th>
				<td>
					<% if @user.birthday? %>
					<%=@user.birthday %>
				<% else %>
					<%=t(:not_insert)%>
					<% end %>
				</td>
			</tr>
			<tr>
				<th><%=t(:enable,scope:[:activerecord,:attributes,:user]) %></th>
				<td>
					<%=raw flagToString(@user.enable) %>
				</td>
			</tr>
			<tr>
				<th><%=t(:sign_in_count,scope:[:activerecord,:attributes,:user]) %></th>
				<td>
					<%=@user.sign_in_count %><%=t(:times) %>
				</td>
			</tr>
			<tr>
				<th><%=t(:last_sign_in_at,scope:[:activerecord,:attributes,:user]) %></th>
				<td>
					<% if @user.last_sign_in_at? %>
					<%=@user.last_sign_in_at %>
					<% else %>
					<%=t(:none) %>
					<% end %>
				</td>
			</tr>
			<tr>
				<th><%=t(:label_updated_at) %></th>
				<td>
					<%= @user.created_at %>
				</td>
			</tr>
			<tr>
				<th><%=t(:label_created_at) %></th>
				<td>
					<%= @user.updated_at %>
				</td>
			</tr>
		</tbody>
	</table>
</div>

<%= link_to t(:link_list), admin_users_path %>
