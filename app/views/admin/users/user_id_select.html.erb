<div id="user_id_select" class="modal-dialog">
	<div class="modal-content">
		<div class="modal-body">
			<%= form_tag user_id_select_search_result_admin_users_path,:method=>'get',:id=>'user_id_search_form',:class=>"form-inline" do |f| %>
				<div class="form-group">
					<select name="find_method" class="form-control">
						<option value="barcode" <% if params[:barcode].present? %>selected="selected"<% end %>><%= t(:find_by_barcode) %></option>						
						<option value="login_id" <% if params[:login_id].present? %>selected="selected"<% end %>><%= t(:find_by_email) %></option>
						<option value="name" <% if params[:name].present? %>selected="selected"<% end %>><%= t(:find_by_name) %></option>
					</select>
				</div>
				<div class="form-group">
					<%= search_field_tag :search,'',{:class=>"form-control",:required=>"required"} %>
				</div>
				<div class="form-group">
					<%= button_tag t(:search),:type=>'submit',:class=>"btn btn-default" %>
				</div>
				<select id="perpage">
					<option value="10"><%= t(:show_10) %></option>
					<option value="20"><%= t(:show_20) %></option>
					<option value="30"><%= t(:show_30) %></option>
					<option value="50"><%= t(:show_50) %></option>
					<option value="100"><%= t(:show_100) %></option>
				</select>
				<div id="clear_check_list_layer"></div>
			<% end %>
			<div class="js_pagination user_select_pagination"></div>
			<ul id="user_id_list"></ul>
			<% if params[:no_layout] %>
			<div class="js_pagination user_select_pagination"></div>
			<%= javascript_include_tag 'admin/users/user_id_select.js', "data-turbolinks-track" => true %>
			<% end %>
		</div>
	</div>
</div>
