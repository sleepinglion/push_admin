<header>
	<div class="container">
		<div class="row">
			<h1><%= link_to t(:home_title),root_path %></h1>
			<nav>
				<ul class="nav nav-pills">
					<li><%= link_to t(:notice),notices_path %></li>
					<li><%= link_to t(:recommend),recommends_path %></li>				
					<% if user_signed_in? %>
					<li><%= link_to current_user.name,edit_user_registration_path %><%= t(:welcome)%></li>
					<li><%= link_to t(:logout),destroy_user_session_path %></li>	
					<% else %>
					<li><%= link_to t(:login),new_user_session_path %></li>
					<li><%= link_to t(:menu_new_user),new_user_registration_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>
