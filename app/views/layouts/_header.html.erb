<header>
	<div class="container">
		<div class="row">
			<h1><%= link_to t(:home_title),root_path %></h1>
			<div id="select_language_layer">
				<%=link_to '한국어', url_for(:locale => 'ko'),:class=>'ko' %>
				<%=link_to 'English', url_for( :locale => 'en'),:class=>'en' %>
				<%=link_to '汉语', url_for( :locale => 'zh-CN'),:class=>'zh-CN' %>
			</div>
			<nav>
				<ul class="nav nav-pills">
					<% if user_signed_in? %>
					<li><%= link_to current_user.name,edit_user_registration_path %><%= t(:welcome)%></li>
					<li><%= link_to t(:logout),destroy_user_session_path %></li>
					<li><%= link_to t(:device),new_device_path %></li>					
					<% else %>
					<li><%= link_to t(:login),new_user_session_path %></li>
					<li><%= link_to t(:menu_new_user),new_user_registration_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>
