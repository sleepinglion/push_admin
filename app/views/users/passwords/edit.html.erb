<% breadcrumb :edit_user_password %>
<section id="reset_password" class="container sl_section_type1">
	<div class="row">
		<div class="col-xs-12 col-md-offset-4 col-md-9 col-md-pull-1 col-xl-offset-0 col-xl-pull-0 col-xl-12">
			<h2 class="col-xs-12"><%=t(:change_my_password) %></h2>
			<p class="col-xs-12 description">&nbsp;</p>
		</div>
		<div class="col-xs-12 col-md-offset-4 col-md-9 col-md-pull-1 col-xl-offset-0 col-xl-pull-0 col-xl-12">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class=>'col-xs-12',:method => :put }) do |f| %>
				<% if resource.errors.any? %>
      		<div id="error_explanation" class="alert alert-danger">
      			<a href="#" class="close" data-dismiss="alert">&times;</a>
            <h2><%= pluralize(resource.errors.count, t(:user_error)) %> <%=t(:sorry_but_error) %></h2>
      			<ul>
      				<% resource.errors.full_messages.each do |msg| %>
      				<li><%= msg %></li>
      				<% end %>
      			</ul>
      		</div>
      	<% end %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group"><%= f.label :password %>
            <%= f.password_field :password, :autofocus => true, :class=>"form-control input-lg" %></div>
        <div class="form-group"><%= f.label :password_confirmation%>
            <%= f.password_field :password_confirmation, :class=>"form-control input-lg" %></div>
        <div><%= f.submit t(:change_my_password),:class=>"btn btn-lg btn-block btn-primary" %></div>
        <% end %>
    </div>
</section>
