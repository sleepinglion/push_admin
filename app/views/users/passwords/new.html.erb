<% breadcrumb :new_user_password %>
<section id="change_my_password" class="container sl_section_type1">
	<div class="row">
		<div class="col-xs-12 col-md-offset-4 col-md-9 col-md-pull-1 col-xl-offset-0 col-xl-pull-0 col-xl-8">
			<h2 class="col-xs-12"><%=t(:menu_new_user_password) %></h2>
			<p class="col-xs-12 description"><%=raw t(:send_password_reset_email) %></p>
		</div>
    <div class="col-xs-12 col-md-offset-4 col-md-9 col-md-pull-1 col-xl-offset-0 col-xl-pull-0 col-xl-12">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class=>'col-xs-12',:method => :post }) do |f| %>
				<% if resource.errors.any? %>
      		<div id="error_explanation" class="alert alert-danger">
      			<a href="#" class="close" data-dismiss="alert">&times;</a>
            <h2><%= pluralize(resource.errors.count, t(:user_error)) %> <%=t(:sorry_but_error) %></h2>
      			<ul>
      				<% resource.errors.full_messages.each do |msg| %>
      				<li><%= msg %></li>
      				<% end %>
      			</ul>
      		</div>
      	<% end %>
        <div class="form-group">
            <%= f.label :login_id %>
            <%= f.email_field :login_id, :autofocus => true, :class=>"form-control input-lg" %>
        </div>
        <div class="form-group"><%= f.submit t(:send_me_reset_password_instructions),:class=>"btn btn-lg btn-block btn-primary" %></div>
        <% end %>
    </div>
  </div>
</section>
