<% breadcrumb :user_edit,@user %>
<section id="sl_user_add_form" class="container sl_section_type1">
    <div class="row">
        <div class="col-xs-12 col-md-offset-4 col-md-9 col-md-pull-1 col-xl-offset-0 col-xl-pull-0 col-xl-12">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal col-xs-12' }) do |f| %>
        <% if resource.errors.any? %>
      		<div id="error_explanation" class="alert alert-danger">
      			<a href="#" class="close" data-dismiss="alert">&times;</a>
            <h2><%= pluralize(resource.errors.count, t(:user_error)) %> <%=t(:sorry_but_error) %></h2>
      			<ul>
      				<% resource.errors.full_messages.each do |msg| %>
      				<li><%= msg %></li>
      				<% end %>
      			</ul>
      		</div>
      	<% end %>
        <article class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><%= t(:user_data_default_insert) %></h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <%= f.label :login_id,:class=>"control-label col-xs-12 col-sm-2" %>
                    <div class="col-xs-12 col-sm-10">
                    <p class="form-control-static"><%=resource.email %></p>
                  </div>
                </div>
                <div class="form-group">
                    <%= f.label :name,:class=>"control-label col-xs-12 col-sm-2" %>
                    <div class="col-xs-12 col-sm-10">
                        <%= f.text_field :name,:class=>"form-control input-lg",:autofocus => true %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :birthday,:class=>"control-label col-xs-12 col-sm-2" %>
                    <div class="col-xs-12 col-sm-10">
                        <%= f.date_select :birthday,{:start_year=>Time.current.year-100,:end_year=>Time.current.year} %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :sex,:class=>"control-label col-xs-12 col-sm-2" %>
                    <div class="col-xs-12 col-sm-10">
                        <label class="radio-inline"><%= f.radio_button :sex,true %><%=t(:male) %></label>
                        <label class="radio-inline"><%= f.radio_button :sex,false %><%=t(:female) %></label>
                    </div>
                </div>
            </div>
        </article>
        <article class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><%= t(:change_user_password) %></h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <%= f.label :password,:class=>"control-label col-xs-12 col-sm-2" %>
                    <div class="col-xs-12 col-sm-10">
                        <%= f.password_field :password,:class=>"form-control input-lg", :autocomplete => "off" %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :password_confirmation,:class=>"control-label col-xs-12 col-sm-2" %>
                    <div class="col-xs-12 col-sm-10">
                        <%= f.password_field :password_confirmation,:class=>"form-control input-lg" %>
                    </div>
                </div>

            </div>
          </article>

              <article class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= t(:change_user_submit) %></h3>
                </div>
                <div class="panel-body">
                  <div class="form-group">
                      <%= f.label :current_password,:class=>"control-label col-xs-12 col-sm-2" %>
                        <div class="col-xs-12 col-sm-10">
                          <%= f.password_field :current_password,:class=>"form-control input-lg" %>
                      </div>
                  </div>
            <div class="form-actions">
                <%= f.submit :class=>"btn btn-lg btn-block btn-primary" %>
            </div>
              </div>
            </article>
            <% end %>
          </div>
        </div>
    </section>
