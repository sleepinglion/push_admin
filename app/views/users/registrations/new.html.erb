<% breadcrumb :user_new %>
<section id="sl_user_add_form" class="sl_section_type1">
		<div class="col-xs-12">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal col-xs-12',:id=> 'user_form'}) do |f| %>
	<% if resource.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(resource.errors.count, t(:user_error)) %> <%=t(:sorry_but_error) %></h2>
			<ul>
				<% resource.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<article class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><%= t(:user_data_default_insert) %></h3>
		</div>
		<div class="panel-body">
			<div class="form-group">
				<%=f.label :login_id,:class=>"control-label col-sm-3 col-xl-2" %>
				<div class="col-sm-9 col-xl-10">
					<%= f.text_field :login_id, :autofocus => true,:maxlength=>"255",:class=>"form-control input-lg",:required=>"required" %>
				</div>
			</div>
			<div class="form-group">
				<%=f.label :name,:class=>"control-label col-sm-3 col-xl-2" %>
				<div class="col-sm-9 col-xl-10">
					<%= f.text_field :name, :maxlength=>"60",:class=>"form-control input-lg",:required=>"required" %>
				</div>
			</div>
			<div class="form-group">
				<%=f.label :password,:class=>"control-label col-sm-3 col-xl-2" %>
				<div class="col-sm-9  col-xl-10">
					<%= f.password_field :password, :maxlength=>"60",:class=>"form-control input-lg",:required=>"required"  %>
				</div>
			</div>
			<div class="form-group">
				<%=f.label :password_confirmation,:class=>"control-label col-sm-3 col-xl-2" %>
				<div class="col-sm-9  col-xl-10">
					<%= f.password_field :password_confirmation, :maxlength=>"60",:class=>"form-control input-lg",:required=>"required"  %>
				</div>
			</div>
		</div>
	</article>

	<div class="section_bottom">
		<%= f.submit '신규등록',:class=>"btn btn-block btn-primary btn-lg" %>
	</div>
	<% end %>

		</div>
</section>
