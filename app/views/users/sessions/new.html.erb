<% breadcrumb :user_login %>
<div id="new_user_session" class="sl_section">
		<div class="col-xs-12">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class=>"form-horizontal",:id=>"sl_login_form",:role=>"form"} ) do |f| %>
			<div class="form-group">
				<label for="sl_login_id" class="col-sm-2 control-label"><%=t(:login_id,scope:[:activerecord,:attributes,:user]) %></label>
				<div class="col-sm-10">
					<%= f.text_field :login_id, :autofocus => true, :class=>"form-control input-lg",:required=>"required", :placeholder=>t(:login_p_email) %>
				</div>
			</div>
			<div class="form-group">
				<label for="sl_password" class="col-sm-2 control-label"><%=t(:password,scope:[:activerecord,:attributes,:user]) %></label>
				<div class="col-sm-10">
					<%= f.password_field :password,:class=>"form-control input-lg",:required=>"required", :placeholder=>t(:login_p_password) %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%=link_to new_user_registration_path do %><%= t(:menu_new_user) %>
					<span class="visible-xs glyphicon glyphicon-chevron-right pull-right"></span><% end %>
					<div class="checkbox">
						<label>
							<input type="checkbox" name="remember_me" id="remember_me"/>
							<%= t(:remember_me) %>
						</label>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%=f.submit t(:user_login),:class=>"btn btn-lg btn-primary" %>
				</div>
			</div>
			<% end %>
		</div>
</div>
